#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/utils.mk
include /usr/share/cdbs/1/class/autotools.mk

DEB_CONFIGURE_SCRIPT := ./autogen.sh

DEB_CONFIGURE_EXTRA_FLAGS += --disable-static \
  --enable-applet \
  --enable-cajaburn \
  --enable-matekeyring \
  --enable-matedesktop \
  --enable-mateprint \
  --enable-mateprintui \
  --enable-marco \
  --disable-rsvg \
  --disable-bugbuddy \
  --disable-mediaprofiles \
  --disable-wnck \
  --disable-gtop \
  --disable-gtksourceview \
  --disable-totem_plparser \
  --disable-evolution \
  --disable-evolution_ecal \
  --disable-evince \
  --disable-braseroburn \
  --disable-braseromedia

# all applets are: applet mateprint mateprintui gtksourceview wnck totem_plparser gtop cajaburn mediaprofiles
# rsvg matekeyring matedesktop bugbuddy marco evolution evolution_ecal evince braseromedia braseroburn marco

DEB_DH_INSTALL_ARGS += --list-missing

get-orig-source:
	uscan --noconf --force-download --rename --repack --download-current-version --destdir=.
